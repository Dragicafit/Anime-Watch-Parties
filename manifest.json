{
  "manifest_version": 2,
  "name": "Anime Watch Parties",
  "description": "Watch your favorite anime with your streamer.",
  "version": "0.1",
  "author": "Dragicafit",
  "icons": {
    "16": "src/icons/icon.svg",
    "48": "src/icons/icon.svg",
    "96": "src/icons/icon.svg",
    "128": "src/icons/icon.svg"
  },
  "homepage_url": "https://github.com/Dragicafit/Anime-Watch-Parties",
  "permissions": [
    "*://*.wakanim.tv/*/episode/*",
    "*://*.crunchyroll.com/*/*",
    "*://*.funimation.com/*/shows/*",
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["built/src/background-scripts/background-script.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Anime Watch Parties",
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/icons/desactivate.svg",
      "32": "src/icons/desactivate.svg"
    }
  },
  "web_accessible_resources": [
    "built/src/web-accessible-resources/js/script.js",
    "built/src/web-accessible-resources/css/script.css"
  ]
}
