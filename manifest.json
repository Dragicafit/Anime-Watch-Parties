{
  "manifest_version": 2,
  "name": "Anime Watch Parties",
  "description": "A cross-platform extension that synchronizes videos on major anime websites.",
  "version": "0.2.0",
  "author": "Dragicafit",
  "icons": {
    "48": "src/icons/activate.svg",
    "96": "src/icons/icon.svg"
  },
  "homepage_url": "https://animewatchparties.com",
  "permissions": [
    "*://*.wakanim.tv/*/episode/*",
    "*://*.crunchyroll.com/*/*",
    "*://*.funimation.com/*/shows/*",
    "*://*.animedigitalnetwork.fr/video/*",
    "*://*.awp.moe/*",
    "webNavigation"
  ],
  "background": {
    "scripts": ["src/background-scripts/background-script.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Anime Watch Parties",
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/icons/desactivate.svg",
      "32": "src/icons/desactivate.svg"
    }
  },
  "web_accessible_resources": ["src/web-accessible-resources/js/script.js"]
}
