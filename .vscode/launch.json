{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch WebExtension",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "addonPath": "${workspaceFolder}",
      "preLaunchTask": "browserify"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch server",
      "program": "src/server/server.js",
      "skipFiles": ["<node_internals>/**"],
      "env": { "NODE_DEBUG": "", "DEBUG": "serverAWP:*" },
      "console": "integratedTerminal"
    }
  ]
}
